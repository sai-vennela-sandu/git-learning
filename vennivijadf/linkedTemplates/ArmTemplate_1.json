						"typeProperties": {
							"items": {
								"value": "@activity('Get  metadata').output.childItems",
								"type": "Expression"
							},
							"isSequential": true,
							"activities": [
								{
									"name": "Set variable1",
									"type": "SetVariable",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"variableName": "Date",
										"value": {
											"value": "@split(split(item().name,'_')[1],'.')[0]\n\n",
											"type": "Expression"
										}
									}
								},
								{
									"name": "Copy data1",
